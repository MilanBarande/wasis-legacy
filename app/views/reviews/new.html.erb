<h3>Add a new review </h3>

<%= simple_form_for [@workplace, @review] do |f| %>
  <%= f.input :comment, maxlength: 480, size: 60 %>
  <%= f.error_notification %>

  <%= form_tag workplace_ratings_path do %>
    <% @user_ratings.each do |rating| %>

    <%= fields_for 'ratings[]', rating do |p| %>

     <div class="field">
       <%= p.label rating.description %><br>
       <%= f.input :ratings, collection: 1..5 %>
     </div>
    <% end %>
    <% end %>
    <div class="">
      <%= f.submit "add a review", class: "btn btn-primary" %>
    </div>
  <% end %>
<% end %>
