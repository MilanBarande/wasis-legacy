<!-- Home page screen -->
<section class="home-page">
  <div class="home-banner">
    <div class="home-logo">
      <%= image_tag "wasis_home.png" %>
      <h2>Your favorites workplaces in town</h2>
      <p>Another placeholder text to say how amazing this app is and what<br/> it really help you to do today. It need to be in two line! thnks dawg</p>
    </div>
    <div class="home-category">
      <ul>
        <li><h3>Coworking Space</h3><%= image_tag "type_coworking.png" %></li>
        <li><h3>Coffee</h3><%= image_tag "type_coffee.png" %></li>
        <li><h3>Library</h3><%= image_tag "type_library.png" %></li>
        <li><h3>Park</h3><%= image_tag "type_park.png" %></li>
        <li><h3>Others</h3><%= image_tag "type_others.png" %></li>
      </ul>
    </div>
  </div>
  <div class="home-map" style="background-image: linear-gradient(135deg, rgba(249,193,67,0.2) 0%,rgba(250,79,131,0.2) 33%,rgba(74,255,245,0.2) 100%), url('<%= image_path 'map_home.png' %>');">
    <div class="button-banner">
      <%= link_to workplaces_path do %>
      <h4>FIND</h4>
      <% end %>
    </div>
  </div>
  <div class="home-city">
    <p> Montreal - San Francisco - Paris - Boston - Toronto - Berlin - Milan - Barcelone - Stocklom </p>
  </div>
</section>

