<h1><%= @workplace.name %></h1>

<div class="container workplace-show">
  <div class="container main">
    <h3><%= @workplace.name %></h3>
    <% if @workplace.photo? %>
    <%= cl_image_tag @product.photo.path, width: 600, height: 400, crop: :scale %>
    <% end %>
  </div>

  <div class="container details">
    <p><%= @workplace.description %></p>
    <p><%= @workplace.category %> $</p>
    <p><%= @workplace.features.each %></p>

    <div class="btn-workplace">
      <%= link_to "Back to workplaces", workplaces_path, class: "waves-effect waves-light btn" %>
    </div>
  </div>
</div>
