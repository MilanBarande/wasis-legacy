<div class="container workplace-form">
  <h3>Edit this workplace</h3>
  <%= simple_form_for(@workplace)  do |f| %>
    <%= f.error_notification %>

    <%= f.input :name, placeholder: 'Enter a name' %>

    <%= f.input :address, placeholder: 'Address' %>

    <%= f.input :features, as: :check_boxes,
  collection: @features %>


    <%= f.input :category, as: :radio_buttons,
  collection: ["0", "1", "2"] %>

    <%= f.input :photo %>

    <%= f.input :photo_cache, as: :hidden %>

    <%= f.button :submit %>
  <% end %>
</div>
