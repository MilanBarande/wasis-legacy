<div class="wrapper">
      <div class="user-card-avatar">
      <% if @user.facebook_picture_url != nil %>
        <%= image_tag @user.facebook_picture_url, class: "avatar-profile"  %>
        <% else %>
        <img src="http://placehold.it/150x150", class= "avatar-profile">
        <% end %>
      </div>
      <div class="user-card">
        <div class="username"><p>Full Name :</p><%= "#{@user.first_name}, #{@user.last_name}" %>
        </div>
        <div class="usermail"><p>Email address :</p><%= @user.email %>
        </div>
        <div class="userbio"><p>Bio :</p>
      </div>
      <ul class="social-logo">
        <li><i class="fa fa-linkedin-square" aria-hidden="true"></i></li>
        <li><i class="fa fa-facebook" aria-hidden="true"></i></li>
        <li><i class="fa fa-twitter" aria-hidden="true"></i></li>
      </ul>
    </div>
  </div>

