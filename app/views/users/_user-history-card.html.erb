<% @workplaces.each do |workplace| %>
  <div class="user-profile-card grow">
    <div class="user-profile-card-rating">
      <div class="fa fa-star rating-card"></div>
      <div class="workplace-user-profile-rating"><%= workplace.global_rating %></div>
      </div>
        <%= link_to((workplace), class: 'card-link') do %>

        <% if workplace.photo.url.nil? %>
            <%= image_tag 'http://via.placeholder.com/300x230', class:'user-profile-card-image' %>
            <% else %>
          <%= cl_image_tag workplace.photo.url, class:'user-profile-card-image' %>
          <% end %>
          <% end %>
        <div class="user-profile-card-body">
          <h4><%= workplace.name %></h4>
          <p><%= workplace.address %>, <br/> Visited: <%= workplace.visits.count %></p>
        </div>

      <ul class="card-favorites">
        <li><a><i class="fa fa-heart" id=<%='favorited2' if current_user.favourites.find_by(workplace: workplace) %>></i></a></li>
      </ul>
  </div>
<% end %>
